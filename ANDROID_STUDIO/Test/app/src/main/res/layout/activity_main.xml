<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/MainScrollView"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/Categories"
                    android:textSize="30sp" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:alignmentMode="alignMargins"
                    app:columnCount="@integer/HowManyColumns"
                    app:columnOrderPreserved="false"
                    app:useDefaultMargins="true">


                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/antics"
                            android:src="@drawable/round_btn5" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/antics2"
                            android:scaleType="centerInside"
                            android:src="@drawable/antyki" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/antics"
                            android:textStyle="bold"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/cars"
                            android:src="@drawable/round_btn3" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/cars2"
                            android:scaleType="centerInside"
                            android:src="@drawable/cars" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/cars"
                            android:textStyle="bold"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp"
                        tools:ignore="TextSizeCheck">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/house"
                            android:src="@drawable/round_btn" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/house2"
                            android:scaleType="centerInside"
                            android:src="@drawable/house" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/house"
                            android:textStyle="bold"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/work"
                            android:src="@drawable/round_btn4" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/work2"
                            android:scaleType="centerInside"
                            android:src="@drawable/work" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/work"
                            android:textStyle="bold"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/garden"
                            android:src="@drawable/round_btn" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/garden2"
                            android:scaleType="centerInside"
                            android:src="@drawable/garden" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/garden"
                            android:textStyle="bold"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp">

                        <!-- Tło okrągłego przycisku -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:contentDescription="@string/electro"
                            android:src="@drawable/round_btn2" />

                        <!-- ImageButton z ikoną -->
                        <ImageButton
                            android:id="@+id/roundButton6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/electro2"
                            android:scaleType="centerInside"
                            android:src="@drawable/electro" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:gravity="center_horizontal"
                            android:text="@string/electro"
                            android:textStyle="bold"

                            />

                    </FrameLayout>

                </androidx.gridlayout.widget.GridLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/LightGray"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/PromotedOFfers"
                    android:textSize="30sp">

                </TextView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/cyan">

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:alignmentMode="alignMargins"
                        app:columnCount="2"
                        app:columnOrderPreserved="false"
                        app:useDefaultMargins="true">

                        <Button
                            android:id="@+id/button2"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="@string/SeeMore"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/StepOut"
                                android:textColor="@color/LightBlue" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ForBusiness"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/LightBlue"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/appicon2"
                        android:contentDescription="@string/icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/app_desc"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/joinUs"
                        android:textSize="13sp" />

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:alignmentMode="alignMargins"
                        app:columnCount="5"
                        app:columnOrderPreserved="false"
                        app:useDefaultMargins="true">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/instagram" />

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/youtube" />

                    </androidx.gridlayout.widget.GridLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cyan"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/news"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/news"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/addOffert"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:text="@string/addOffert"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cyan"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/myacc"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/user"
            android:text="@string/account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/appicon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="0dp"
        android:orientation="horizontal"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">



        <android.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:elevation="120dp"
            android:queryHint="@string/searchForOfferts"
            android:textColorHint="@color/black" />

        <Spinner
            android:id="@+id/AreaOfSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>